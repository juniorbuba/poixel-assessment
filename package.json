{
  "name": "poixel-backend-assesment",
  "description": "Poixel backend assessment for Buba Mohammed Auwal, implementation in Node.js, Express, Typescript and MongoDB",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "start": "tsnd --project tsconfig.json -r dotenv/config server/api.ts",
    "buildstart": "tsc && tsnd --project tsconfig.json -r dotenv/config server/api.ts",
    "test": "ts-mocha -p tsconfig.json . dotenv_config_path=./.env.test -r dotenv/config tests/**/*.spec.ts",
    "start:test-server": "cross-env DOTENV_CONFIG_PATH=./.env.test tsnd --project tsconfig.json -r dotenv/config server/api.ts"
  },
  "private": true,
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.15.1",
    "http-status": "^1.3.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.0",
    "mongoose": "^5.11.18",
    "mongoose-delete": "^0.5.2",
    "morgan": "^1.10.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.13",
    "@types/expect": "^1.20.4",
    "@types/express": "^4.16.1",
    "@types/http-status": "^0.2.30",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.3.21",
    "@types/morgan": "^1.9.1",
    "@types/node": "~8.9.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^8.0.5",
    "ts-mocha": "^10.0.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.64",
    "ts-standard": "10.0.0",
    "typescript": "^4.7.4"
  }
}
